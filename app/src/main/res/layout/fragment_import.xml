<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/timeline_userprofpic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/timeline_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="rlagksquf30@gmail.com"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/timeline_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7">

        <ImageView
            android:id="@+id/timeline_commentpic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/ic_chat"
            android:layout_alignParentLeft="true" />
        <EditText
            android:id="@+id/timeline_comment"
            android:layout_toRightOf="@id/timeline_commentpic"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:hint="댓글 입력"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <Button
            android:id="@+id/timeline_comment_upload"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/timeline_comment"
            android:text="입력" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timeline_comment_userid"
            android:text="dfssadfdfafssdfa"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:lines="1"
            android:maxLength="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/timeline_comment_comment"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/timeline_comment_userid"
            android:layout_alignParentRight="true"
            android:text="dfsadfsafsdafdsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
